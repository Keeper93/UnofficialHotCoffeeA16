<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>MakePrimitiveCoffee</defName>
		<label>make primitive coffee</label>
		<description>Make a cup of primitive coffee using raw coffee beans.</description>
		<jobString>Making primitive coffee.</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>600</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>Campfire</li>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCoffeeBeans</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCoffeeBeans</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PrimitiveCoffee>5</PrimitiveCoffee>
		</products>
		<workSkill>Cooking</workSkill>
		<researchPrerequisite>PrimitiveCoffee</researchPrerequisite>
	</RecipeDef>

